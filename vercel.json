{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --no-optional",
  "framework": "nextjs",
  "functions": {
    "pages/**/*.js": {
      "runtime": "nodejs18.x"
    },
    "pages/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "SKIP_OPTIONAL_DEPS": "true",
    "NPM_CONFIG_OPTIONAL": "false",
    "PNPM_CONFIG_OPTIONAL": "false"
  },
  "build": {
    "env": {
      "SKIP_OPTIONAL_DEPS": "true",
      "NPM_CONFIG_OPTIONAL": "false",
      "PNPM_CONFIG_OPTIONAL": "false",
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "PYTHON": "/usr/bin/python3.11"
    }
  }
}
